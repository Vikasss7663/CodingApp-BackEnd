<!doctype html>
<html lang="en">
  <head>

    <%- include('partials/head.ejs'); %>

    <title>Code Learning App</title>

  </head>
  <body>

    <%- include('partials/header.ejs'); %>

    <% let count = 1; %>
    <% for (var i = 0 ; i < objQuestions.length ; i++) { %>

    <div class="container my-2">

        <div class="mx-2 my-4">
          <span class="badge bg-light text-info">Questions:<%= count %></span>
            <h6> 
                <%-
                (objQuestions[i].question)
                .replace(new RegExp("<", 'g'), "&lt;")
                .replace(new RegExp("\n", 'g'), "<br>")
                .replace(new RegExp("\t", 'g'), "&nbsp;&nbsp;&nbsp;&nbsp;");
                 %>
            </h6>
        </div>
        
        <div class="container">
              <div class="form-check my-2">
                <input class="form-check-input" type="radio" name="exampleRadios<%=i%>" id="exampleRadios1<%=i%>" value="option1">
                <label class="form-check-label" for="exampleRadios1<%=i%>">
                    <%- objQuestions[i].optionA.replace(new RegExp("<", 'g'), "&lt;")
                    .replace(new RegExp("\n", 'g'), "<br>")
                    .replace(new RegExp("\t", 'g'), "&nbsp;&nbsp;&nbsp;&nbsp;"); %>
                </label>
              </div>
              <div class="form-check my-2">
                <input class="form-check-input" type="radio" name="exampleRadios<%=i%>" id="exampleRadios2<%=i%>" value="option2">
                <label class="form-check-label" for="exampleRadios2<%=i%>">
                    <%- objQuestions[i].optionB.replace(new RegExp("<", 'g'), "&lt;")
                    .replace(new RegExp("\n", 'g'), "<br>")
                    .replace(new RegExp("\t", 'g'), "&nbsp;&nbsp;&nbsp;&nbsp;"); %>
                </label>
              </div>
              <div class="form-check my-2">
                <input class="form-check-input" type="radio" name="exampleRadios<%=i%>" id="exampleRadios3<%=i%>" value="option3">
                <label class="form-check-label" for="exampleRadios3<%=i%>">
                    <%- objQuestions[i].optionC.replace(new RegExp("<", 'g'), "&lt;")
                    .replace(new RegExp("\n", 'g'), "<br>")
                    .replace(new RegExp("\t", 'g'), "&nbsp;&nbsp;&nbsp;&nbsp;"); %>
                </label>
              </div>
              <div class="form-check my-2">
                <input class="form-check-input" type="radio" name="exampleRadios<%=i%>" id="exampleRadios4<%=i%>" value="option4">
                <label class="form-check-label" for="exampleRadios4<%=i%>">
                    <%- objQuestions[i].optionD.replace(new RegExp("<", 'g'), "&lt;")
                    .replace(new RegExp("\n", 'g'), "<br>")
                    .replace(new RegExp("\t", 'g'), "&nbsp;&nbsp;&nbsp;&nbsp;"); %>
                </label>
              </div>
        </div>

    <hr/>


    </div>

    <% count++; } %>

    <%- include('partials/footer.ejs'); %>


  </body>

  </html>