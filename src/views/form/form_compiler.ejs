<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs'); %>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

    <%- include('../partials/header.ejs'); %>

    <div class="container my-2">
        <form action="/run" method="POST">
            <div class="card p-4">
                <div class="form-group">
                    <label for="lang">Select Language</label>
                    <select class="form-control" id="lang" name="lang">
                        <option value="C" <%= obj.lang === 'C' ? 'selected' : '' %>>C</option>
                        <option value="C++" <%= obj.lang === 'C++' ? 'selected' : '' %>>C++</option>
                        <option value="Java" <%= obj.lang === 'Java' ? 'selected' : '' %>>Java</option>
                        <option value="Python" <%= obj.lang === 'Python' ? 'selected' : '' %>>Python</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="code">Enter Code</label>
                    <textarea class="form-control" id="code" name="code" rows="8"><%= obj.code %></textarea>
                </div>
                <div class="form-group">
                    <label for="input">Enter Input</label>
                    <textarea class="form-control" id="input" name="input" rows="3"><%= obj.input %></textarea>
                </div>
                <% if (obj.output !== "") { %>
                    <div class="form-group">
                        <label for="output">Output</label>
                        <textarea class="form-control" id="output" name="output" rows="3" disabled><%= obj.output %></textarea>
                    </div>
                <% } %>
                <button type="submit" class="btn btn-primary">Run</button>
            </div>
        </form>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <%- include('../partials/footer.ejs'); %>

</body>
</html>
