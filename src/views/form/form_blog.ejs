<!DOCTYPE html>
<html lang="en">
<head>    
  <%- include('../public/partials/head.ejs'); %>  
</head>
<body>


   <%- include('../public/partials/header.ejs'); %>  


    <form class="card container my-2 col-md-12 col-lg-6" action='/createBlog' method="POST">
        <div class="form-group">
            <label for="title">Enter title<span class="text-primary"> *</span></label>
            <textarea class="form-control" id="title" name="title" rows="3"></textarea>
          </div>
        <div class="form-group">
            <label for="detail">Enter detail</label>
            <textarea class="form-control" id="detail" name="detail" rows="3"></textarea>
         </div>
        <div class="form-group">
            <label for="url">Enter Url</label>
            <textarea class="form-control" id="url" name="url" rows="2"></textarea>
         </div>
         <div class="form-group">
            <label for="tag">Enter Tag</label>
            <textarea class="form-control" id="tag" name="tag" rows="1"></textarea>
            <br/>
          </div>
        <button type="submit" class="btn btn-primary">Create</button><br/>
      </form>


   <%- include('../public/partials/footer.ejs'); %>  

    

    
</body>
</html>