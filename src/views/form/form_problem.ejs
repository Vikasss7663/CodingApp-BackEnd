<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs'); %>  
</head>
<body>

  <%- include('../partials/header.ejs'); %>  

    <form class="card container my-2 col-md-12 col-lg-6" action='/problem/create' method="POST">
      
        <div class="form-group">
            <label for="id">Enter id</label>
            <textarea class="form-control" id="id" name="id" rows="1"><%= obj.problemId %></textarea>
          </div>
        <div class="form-group">
            <label for="title">Enter title<span class="text-primary"> *</span></label>
            <textarea class="form-control" id="title" name="title" rows="3"><%= obj.problemTitle %></textarea>
          </div>
        <div class="form-group">
            <label for="detail">Enter detail</label>
            <textarea class="form-control" id="detail" name="detail" rows="3"><%= obj.problemDetail %></textarea>
         </div>
        <div class="form-group">
            <label for="tag">Enter Tag</label>
            <textarea class="form-control" id="tag" name="tag" rows="1"><%= obj.problemTags%></textarea>
            <br/>
          </div>
        
        <div class="row mx-auto">
            <div class="col"><button type="submit" class="btn btn-primary" 
              name="submit" value="delete">Delete</button></div>
            <div class="col"><button type="submit" class="btn btn-primary" 
              name="submit" value="update">Update</button></div>
            <div class="col"><button type="submit" class="btn btn-primary"
              name="submit" value="create">Create</button></div>
        </div> 
        <br/>

      </form>

      <%- include('../partials/footer.ejs'); %>  

</body>
</html>